NAME = hanoi

SRC = hanoi.c 

all: $(NAME)

$(NAME):
	gcc -c $(SRC)
	gcc -o $(NAME) hanoi.o 

clean:
	/bin/rm -f hanoi.o 

fclean: clean
	/bin/rm -f $(NAME)

re: fclean all